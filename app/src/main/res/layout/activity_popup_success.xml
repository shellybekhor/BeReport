<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pop_up_after_report"
    android:orientation="vertical">

    <TextView
        android:id="@+id/popUpWindow"
        android:background="@drawable/pop_report_success"
        android:layout_width="367dp"
        android:layout_height="203dp"
        android:paddingStart="30dp"
        android:paddingTop="30dp"
        android:paddingEnd="30dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="#353739"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.127"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.914" />

    <Button
        android:id="@+id/buttonclose"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/popUpWindow"
        android:layout_alignBottom="@+id/popUpWindow"
        android:layout_alignParentStart="true"
        android:layout_marginStart="82dp"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/button_green_gradient"
        android:text="@string/approve"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:textStyle="bold" />


</RelativeLayout>